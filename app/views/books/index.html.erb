<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table>
  <thead>
    <tr>
      <th>カバー</th>
      <th>書名</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBNコード</th>
      <th>在庫</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.image %>" class="img-responsive cover-image"></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= book.date_of_publication %></td>
        <td><%= book.ISBN_code %></td>
        <td><%= book.availability %></td>
        <td><%= link_to '閲覧', book, class: "btn btn-primary"%></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-primary" %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_book_path, class: "btn btn-primary" %>
</div>
