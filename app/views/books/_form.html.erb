  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :date_of_publication %><br>
    <%= f.date_select :date_of_publication, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :ISBN_code %><br>
    <%= f.text_field :ISBN_code, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :availability %><br>
    <%= f.check_box :availability, class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
